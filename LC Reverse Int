class Solution:
    def reverse(self, x: int) -> int:
        if x<0:
            a = str(x)[1:]
            c = '-' + a[::-1]
            
        else:
            a=str(x)
            c=a[::-1]
        if (-2**31)<=int(c)<=(2**31)-1:
            return int(c)
        else:
            return 0
        
        
